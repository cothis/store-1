{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_module", "dist", "seed"]
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
